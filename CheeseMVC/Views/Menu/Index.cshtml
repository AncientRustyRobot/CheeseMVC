@model List<CheeseMVC.Models.Menu>
<h1>Menus</h1>

<p><a asp-controller="Menu" asp-action="Add">Add Menu</a></p>

@if (Model.Count == 0)
{
    <p>No Menus yet!</p>
}

<ul>
    @foreach (Menu men in Model)
    {
        <li><a asp-controller="Menu" asp-action="ViewMenu" asp-route-ID="@men.ID">@men.Name</a></li>
    }

</ul>
