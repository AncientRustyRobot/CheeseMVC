@model CheeseMVC.ViewModels.AddEditCheeseViewModel

<h1> Edit Cheese @Model.Name (id =@Model.ID)</h1>
<form method="post">
    <input type="hidden" value="@Model.ID" name="id" />
    <div class="form-group">
        <label asp-for="Name"></label>
        <input class="form-control" asp-for="Name" />
        <span asp-validation-for="Name" style="color:red"></span>
    </div>
    <div class="form-group">
        <label asp-for="Description"></label>
        <input class="form-control" asp-for="Description" />
        <span asp-validation-for="Description" style="color:red"></span>
    </div>
    <div class="form-group">
        <label asp-for="Rating"></label>
        <input class="form-control" asp-for="Rating" />
        <span asp-validation-for="Rating" style="color:red"></span>
    </div>
    <div class="form-group">//
        <label asp-for="CategoryID"></label>
        <select asp-for="CategoryID" asp-items="@Model.Categories"></select>
    </div>

    <input type="submit" value="Edit Cheese" />
</form>

