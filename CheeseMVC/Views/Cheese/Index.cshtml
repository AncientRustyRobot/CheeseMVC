@model List<CheeseMVC.Models.Cheese>


<h1>My Cheeses</h1>

<p><a asp.controller="Cheese" asp-action="Add">Add Cheese </a>&nbsp;
<a asp.controller="Cheese" asp-action="Delete">Delete Cheese</a>
</p>


@if (Model.Count == 0)
{
    <p>No cheeses yet!</p>
} 
<form method="post">
    <table class="table">

        <tr>
            <th>Remove</th>
            <th>Name</th>
            <th>Description</th>
            <th>Category</th>
            <th>Rating</th>
            <th>Edit Cheese</th>

        </tr>

        @foreach (Cheese cheese in Model)
        {
            <tr>
                <td><input name="cheeseIds" type="checkbox" value="@cheese.ID" /></td>
                <td>@cheese.Name</td>
                <td>@cheese.Description</td>
                <td>@cheese.Category.Name</td>
                <td>@cheese.Rating</td>
                <td><a asp-controller="Cheese" asp-action="Edit" asp-route-ID="@cheese.ID">Edit</a></td>

            </tr>
        }
    </table>
    <input type="submit" value="Remove Cheese" />
</form> 
    
